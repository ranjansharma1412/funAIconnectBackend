                                {
                                    "key": "isVerified",
                                    "value": "true",
                                    "type": "text"
                                },
                                {
                                    "key": "likes",
                                    "value": "120",
                                    "type": "text"
                                },
                                {
                                    "key": "postImage",
                                    "type": "file",
                                    "src": []
