{
    "info": {
        "_postman_id": "funai-posts-api",
        "name": "FunAI Connect - Posts API",
        "description": "Collection for testing Post CRUD operations with image uploads and authentication",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:5001",
            "type": "string"
        },
        {
            "key": "auth_token",
            "value": "",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "Authentication",
            "item": [
                {
                    "name": "Login",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "    var jsonData = pm.response.json();",
                                    "    pm.collectionVariables.set(\"auth_token\", jsonData.token);",
                                    "    console.log(\"Token saved:\", jsonData.token);",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"email\": \"demo@funai.com\",\n    \"password\": \"demo123\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/auth/login",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "login"
                            ]
                        },
                        "description": "Login with demo credentials. Token will be automatically saved to collection variable.\n\nDemo credentials:\n- Email: demo@funai.com\n- Password: demo123"
                    },
                    "response": []
                },
                {
                    "name": "Register",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 201) {",
                                    "    var jsonData = pm.response.json();",
                                    "    pm.collectionVariables.set(\"auth_token\", jsonData.token);",
                                    "    console.log(\"Token saved:\", jsonData.token);",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"email\": \"newuser@funai.com\",\n    \"password\": \"password123\",\n    \"name\": \"New User\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/auth/register",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "register"
                            ]
                        },
                        "description": "Register a new user. Token will be automatically saved to collection variable."
                    },
                    "response": []
                },
                {
                    "name": "Verify Token",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{auth_token}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/auth/verify",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "verify"
                            ]
                        },
                        "description": "Verify if the current token is valid. Requires authentication."
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Posts",
            "item": [
                {
                    "name": "Create Post",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "formdata",
                            "formdata": [
                                {
                                    "key": "userName",
                                    "value": "Amanda Johnson",
                                    "type": "text"
                                },
                                {
                                    "key": "userHandle",
                                    "value": "@mandaj",
                                    "type": "text"
                                },
                                {
                                    "key": "userImage",
                                    "value": "https://i.pravatar.cc/150?u=3",
                                    "type": "text"
                                },
                                {
                                    "key": "isVerified",
                                    "value": "true",
                                    "type": "text"
                                },
                                {
                                    "key": "likes",
                                    "value": "120",
                                    "type": "text"
                                },
                                {
                                    "key": "postImage",
                                    "type": "file",
                                    "src": []
                                }
                            ]
                        },
                        "url": {
                            "raw": "{{base_url}}/api/posts",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "posts"
                            ]
                        },
                        "description": "Create a new post with image upload. Select an image file for the postImage field.\n\nNote: Authentication is optional for this endpoint."
                    },
                    "response": []
                },
                {
                    "name": "Get All Posts",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/posts?page=1&per_page=10",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "posts"
                            ],
                            "query": [
                                {
                                    "key": "page",
                                    "value": "1",
                                    "description": "Page number (default: 1)"
                                },
                                {
                                    "key": "per_page",
                                    "value": "10",
                                    "description": "Items per page (default: 10)"
                                }
                            ]
                        },
                        "description": "Get all posts with pagination support.\n\nNote: Authentication is optional for this endpoint."
                    },
                    "response": []
                },
                {
                    "name": "Get Single Post",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/posts/1",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "posts",
                                "1"
                            ]
                        },
                        "description": "Get a single post by ID.\n\nNote: Authentication is optional for this endpoint."
                    },
                    "response": []
                },
                {
                    "name": "Delete Post",
                    "request": {
                        "method": "DELETE",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/posts/1",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "posts",
                                "1"
                            ]
                        },
                        "description": "Delete a post by ID.\n\nNote: Authentication is optional for this endpoint."
                    },
                    "response": []
                },
                {
                    "name": "Get Uploaded Image",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/posts/uploads/filename.jpg",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "posts",
                                "uploads",
                                "filename.jpg"
                            ]
                        },
                        "description": "Access an uploaded image file. Replace 'filename.jpg' with the actual filename from the postImage field."
                    },
                    "response": []
                }
            ]
        }
    ]
}